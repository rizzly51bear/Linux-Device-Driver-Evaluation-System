obj-m := $(DRIVER_NAME).o

# Path to the kernel build tree
KDIR := /lib/modules/$(shell uname -r)/build

# Current directory
PWD := $(shell pwd)

all:
	$(MAKE) -C $(KDIR) M=$(PWD) modules

clean:
	$(MAKE) -C $(KDIR) M=$(PWD) clean

# Phony targets to prevent conflicts with file names
.PHONY: all clean
